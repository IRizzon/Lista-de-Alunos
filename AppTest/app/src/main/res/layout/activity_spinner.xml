<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/idTitulo"
                android:layout_width="225dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"
                android:gravity="center"
                android:text="App Lista Alunos "
                android:textColor="#3F60B4"
                android:textSize="26sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/idNome"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="@string/txt_hint_edit_Nome"
                android:inputType="textPersonName"
                android:textColorLink="#3F60B4"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/idSobrenome"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="@string/txt_hint_edit_Sobrenome"
                android:inputType="textPersonName"
                android:textColorLink="#3F60B4"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/idMatricula"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="@string/txt_hint_edit_MatrÃ­cula"
                android:inputType="textPersonName"
                android:textColorLink="#3F60B4"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/idCPF"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="@string/txt_hint_edit_CPF"
                android:inputType="textPersonName"
                android:textColorLink="#3F60B4"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/idTituloS"
                android:layout_width="225dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="@string/txt_selecione_um_curso"
                android:textColor="#3F60B4"
                android:textSize="22dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/idlistacurso"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/idClear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="56dp"
                    android:backgroundTint="#FF7700"
                    android:text="Limpar" />

                <Button
                    android:id="@+id/idSave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="120dp"
                    android:backgroundTint="#FF7700"
                    android:text="Salvar" />
            </LinearLayout>

            <Button
                android:id="@+id/idEnd"
                android:layout_width="230dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:backgroundTint="#3F60B5"
                android:text="Finalizar" />
        </LinearLayout>

    </ScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>